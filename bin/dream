#!/usr/bin/env python

"""Usage: dream calibrate [--instance-id <id>]
          dream push [--instance-id <id>]
          dream pull [--instance-id <id>]
          dream status [--instance-id <id>]
          dream (-h | --help)
          dream --version
"""

from os.path import basename

from docopt import docopt
from rcfile import rcfile

from dream import dream, __version__

if __name__ == '__main__':
    cli_args = docopt(__doc__, version=__version__)
    args = rcfile(basename(__file__), cli_args)
    dream(args)
